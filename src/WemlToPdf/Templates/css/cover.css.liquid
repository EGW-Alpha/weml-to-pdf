@page cover {
    margin: 0;
    background: url("{{ imagePath }}");
    background-position: center;
    background-size: 100%;
    background-repeat: no-repeat;

    @top-left {
        content: none;
    }

    @top-center {
        content: none;
    }

    @top-right {
        content: none;
    }

    @top-right-corner {
        content: none;
    }

    @bottom-left {
        content: none;
    }
}

#cover h1 {
    color: transparent;
}

#cover {
    page: cover;
}