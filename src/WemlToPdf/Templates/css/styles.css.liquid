html {
    --serif: 'spectral', serif;
    --sans-serif: 'hk-grotesk', sans-serif;
    --font-size: 13px;
    --font-size-notes: 9px;
    --line-height: 15px;
    --line-height-toc: 1.25em;
    --line-height-notes: calc(15px*2/3);
    --indent: 6mm;
    --baseline: 15px;
}

section {
{% if printType == "book-printing" %}    
    break-before: right; 
{% endif %}
    position: relative;
}

p.standard-indented {
    text-indent: 30px;
}

.pagenumber {
    font-size: var(--font-size-notes);
    color: rgb(128, 128, 128);
    display: block;
}

.pagenumber::before {
    content: "[";
}

.pagenumber::after {
    content: "]";
}

h3:before,
h2:before {
    display: block;
    font-size: 13px;
    line-height: 15px;
    margin-bottom: 9px;

}

.shorter {
    position: running(shorter);
    font-family: var(--serif);
    font-size: var(--font-size);
    font-weight: normal;
    text-align: left;
    font-style: italic;
    font-variant-numeric: oldstyle-nums;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: "";
}

.toc-line {
    position: running(tocLine);
    font-family: var(--serif);
    font-size: var(--font-size);
    font-weight: normal;
    text-align: left;
    font-style: italic;
    font-variant-numeric: oldstyle-nums;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: "";
}

hr {
    margin-top: 5px;
    margin-bottom: 5px;
    margin-left: 0;
    margin-right: 0;
    padding: 0;
}

a {
    color: black;
    text-decoration: none;
}

h2, h3, h4, h5, h6 {
    break-after: avoid;
}

#title-page {
    height: 100%;
    text-align: center;
}

#title-page h1 {
    margin-top: 50%;
    padding: 10px 0 10px 0;
    border-top: 1px solid black;
    border-bottom: 1px solid black;
}

.book-author {
    width: 100%;
    text-align: center !important;
    padding-bottom: 15px;
}

.book-publisher {
    width: 100%;
    text-align: center !important;
}

.footnotes {
    font-size: var(--font-size-notes);
    {% comment %}border-top: 1px solid black;{% endcomment %}
    {% comment %}margin-top: 0 !important;{% endcomment %}
    {% comment %}padding-top: 0 !important;{% endcomment %}
    text-align: left !important;

    display: block;
{% if config.FootnotesLevel != config.MinHeadingLevel and printType == "book-printing"%}
    break-after: page;
{% endif %}
    orphans: 3;
    widows: 3;
}

span.footnote {
    display: block;
    font-size: var(--font-size-notes);
    text-align: left !important;
}

.no-break {
    break-after: auto;
}

h3,
h2 {
    display: block;
    height: 28mm;
    padding-top: 7mm;
    {% comment %}height: 47.7mm;{% endcomment %}
    /* 63.5mm - 15.8mm */
    {% comment %}padding-top: 15.8mm;{% endcomment %}
    font-size: 18px;
    /* 21 */
    line-height: 23px;
    text-align: center;
    width: 80%;
    margin: 0 auto;
}

p {
    position: relative;
}

p:not(.shorter), li
{
    font-family: 'spectral', serif;
    font-size: 13px;
    line-height: 15px;
    font-weight: 400
}

p:not(.shorter), li {
    text-indent: 6mm;
    text-align: justify;
    margin: 0;
    orphans: 2;
    widows: 2;
    hyphens: auto;
    {% comment %}hyphenate-before: 4;{% endcomment %}
    {% comment %}hyphenate-after: 3;{% endcomment %}
}